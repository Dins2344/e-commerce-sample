<div class="container mt-5">
  <h5>products</h5>
  <div class="row d-flex justify-content-center">
    {{#each products}}
      <div class="col-9 col-md-6 col-lg-4 mt-3">
        <div class="card">
          <img src='/images/prodimg/{{_id}}.jpg' class="card-img-top" alt="Fissure in Sandstone" />
          <div class="card-body">
            <h5 class="card-title">{{bname}}</h5>
            <h6 class="card-title">{{mname}}</h6>
            <h6 class="card-title">{{pname}}</h6>

            <div class="row">
                <div class="col d-flex justify-content-start">
                    <a href="#!" class="btn btn-primary">Buy</a>
                </div>
                <div class="col d-flex justify-content-end">
                    <a href="#!" class="btn btn-primary">Add to cart</a>
                </div>
            </div>
            
          </div>
        </div>

      </div>
    {{/each}}
  </div>
</div>